{
  "name": "drip",
  "version": "1.0.0",
  "description": "A platform to share data",
  "main": "build/server.js",
  "scripts": {
    "start": "npm run reset && npm run migrate && npm run dev",
    "start:prod": "npm run clean && npm run build && node build/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc --build tsconfig.json",
    "migrate": "npx sequelize db:migrate",
    "clean": "rimraf ./build && mkdir ./build && rimraf ./uploads/* && rimraf ./swaggerSpec.json",
    "reset": "rimraf ./database.sqlite",
    "lint": "eslint --fix \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint --fix \"src/**/*.{js,ts}\""
  },
  "author": "Dennis Hilgert",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "busboy": "^1.6.0",
    "celebrate": "^15.0.1",
    "connect-timeout": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "glob": "^8.0.3",
    "helmet": "^6.0.0",
    "inversify": "^6.0.1",
    "inversify-inject-decorators": "^3.1.0",
    "lodash": "^4.17.21",
    "mariadb": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.25.3",
    "sequelize-typescript": "^2.1.5",
    "socket.io": "^4.5.3",
    "sqlite3": "^5.1.2",
    "swagger-jsdoc": "^6.2.5",
    "swagger-ui-express": "^4.6.0",
    "unique-names-generator": "^4.7.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/busboy": "^1.5.0",
    "@types/connect-timeout": "^0.0.36",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/glob": "^8.0.0",
    "@types/lodash": "^4.14.186",
    "@types/node": "^18.11.7",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "sequelize-cli": "^6.5.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  }
}
