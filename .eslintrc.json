{
  "env": {
    "es2022": true,
    "browser": false,
    "node": true
  },
  "extends": ["standard", "prettier", "plugin:prettier/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": "error"
  },
  "globals": {
    "logger": "writable",
    "NodeJS": "readonly"
  }
}
